<div class="search-wrapper-inner">
	<form method="get" action="{{ paths.root }}search" id="searchform" enctype="text/plain">
		<input type="text" value="{% if search is defined %}{{ search|escape }}{% endif %}" placeholder="Search.." name="search">
		<button class="btn-icon" type="submit"><span class="glyphicon glyphicon-search"></span></button>
	</form>
</div>