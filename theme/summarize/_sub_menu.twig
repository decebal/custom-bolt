{% for item in menu %}

    <li class="{% if loop.first %} first{% endif %}{% if loop.last %} last{% endif %}{% if item|current %} active{% endif %}">
        <a href="{{ item.link }}" {% if item.title is defined %}title='{{ item.title|escape }}'{% endif %}
           class='{% if item.class is defined %}{{item.class}}{% endif %}'>
           	{% if item.icon is defined %}<i class="{{item.icon}}"></i> {% endif %}
            {{item.label}}
        </a>
    </li>

{% endfor %}