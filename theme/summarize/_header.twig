<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {# make sure we always display a proper title: The record's title if there is one, appended with the
       sitename. If there is no title, we append the sitename with the payoff, if there is one. #}
    <title>
      {% if record.title is defined %}{{ record.title|striptags }} | {% endif %}
      {{ app.config.get('general/sitename') }}
      {% if record.title is not defined and app.config.get('general/payoff') %} | {{ app.config.get('general/payoff') }}{% endif %}
    </title>

    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700|Lato:300,400,700,400italic,700italic|Droid+Serif' rel='stylesheet' type='text/css'>
    {# paths.theme is always a correct path to the current theme. Even if you rename the theme-folder,
       this will keep working. See the documentation on paths: http://docs.bolt.cm/internals#paths #}
    <link rel="stylesheet" href="{{ paths.theme }}vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ paths.theme }}font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ paths.theme }}prettyPhoto/css/prettyPhoto.css">

    <link rel="stylesheet" href="{{ paths.theme }}css/base.css">
    <link rel="stylesheet" href="{{ paths.theme }}css/compontents.css">

    <link rel="stylesheet" href="{{ paths.theme }}colorschemes/default.css">

    <script src="{{ paths.theme }}vendor/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    {# Bolt comes with Fancybox, as it's used in the backend. We can use it here, or
       you just swap it out for the image-viewing script of your choice. Or delete it altogether #}
    <script src="{{ paths.app }}view/lib/fancybox/jquery.fancybox.pack.js"></script>
    <link rel="stylesheet" type="text/css" href="{{ paths.app }}view/lib/fancybox/jquery.fancybox.css">

</head>
<body>

    <h1 class="sr-only">
      {{ app.config.get('general/sitename') }}
    </h1>

    <!-- Positioning the Top Bar -->

    <nav id="header" class="header-navbar" role="navigation">
        <div class="header-navbar-inner container">
            <div id="brand" class="navbar-brand">
                <a href="{{ paths.root }}" rel="bookmark">

                    <!-- to disable lazy loading, remove data-src and data-src-retina -->
                    <img src="{{ paths.theme }}img/logo.png" data-src="{{ paths.theme }}img/logo.png" data-src-retina="{{ paths.theme }}img/logo-retina.png" width="244" height="56" alt="">

                    <!--fallback for no javascript browsers-->
                    <noscript>
                        <img src="{{ paths.theme }}img/logo.png" alt="">
                    </noscript>
                </a>
        </div>

        <ul class="nav nav-pages hidden-xs">
            {{ menu('main', '_sub_menu.twig') }}
        </ul>

        {# Icons for menu can come in here
        <ul class="nav nav-icons">
            {% include '_sub_icons.twig' %}
        </ul>
        #}

        <div class="search-wrapper js-stoppropagation">
            {% include '_sub_searchbox.twig' %}
        </div>

        {# Secondary menu
        <ul class="nav navbar-nav">
            {{ menu('main', '_sub_submenu.twig') }}
        </ul>
        #}
                
    </nav>

    <!-- Header bar -->

